						<div class="store-filter clearfix">
							<ul class="store-pagination">
								<c:forEach begin="1" end="${noOfPages}" var="i">
									<c:choose>
										<c:when test="${currentPage eq i}">
													<li class="active" style="background-color: white; color: black">${i}</li>
										</c:when>
										<c:otherwise>
													<li class="active" style="background-color: white; color: black"><a href="store?page=${i}">${i}</a></li>
										</c:otherwise>
									</c:choose>
								</c:forEach>

								<c:if test="${currentPage lt noOfPages}">
									<li><a href="store?page=${currentPage + 1}"><i class="fa fa-angle-right"></i></a></li>
								</c:if>
